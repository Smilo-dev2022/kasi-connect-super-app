# Production Environment Configuration for iKasiLink
# This file should be used to validate production environment variables

# Database Configuration
USE_DB=true
MOD_USE_DB=true

# Authentication Configuration
VITE_JWT_ONLY=true
JWT_SECRET=CHANGE_IN_PRODUCTION
OTP_PEPPER=CHANGE_IN_PRODUCTION

# Redis Configuration (Production)
REDIS_URL=redis://production-redis-host:6379

# Media Service Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=af-south-1
S3_ACCESS_KEY_ID=CHANGE_IN_PRODUCTION
S3_SECRET_ACCESS_KEY=CHANGE_IN_PRODUCTION
S3_BUCKET=ikasilink-production-media
S3_FORCE_PATH_STYLE=false

# Search Service Configuration
TYPESENSE_HOST=production-typesense-host
TYPESENSE_PORT=443
TYPESENSE_PROTOCOL=https
TYPESENSE_API_KEY=CHANGE_IN_PRODUCTION

# Events Service Configuration
EVENTS_SECRET_KEY=CHANGE_IN_PRODUCTION
EVENTS_DATABASE_URL=postgresql://user:password@production-db-host:5432/events
EVENTS_BASE_URL=https://api.ikasilink.co.za

# External Services
VITE_SERPAPI_KEY=CHANGE_IN_PRODUCTION

# Security and Compliance
NODE_ENV=production
CORS_ORIGIN=https://ikasilink.co.za

# App Store and Legal Links
VITE_APP_STORE_URL=https://apps.apple.com/app/ikasilink
VITE_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=za.co.ikasilink
VITE_PRIVACY_POLICY_URL=https://ikasilink.co.za/privacy
VITE_TERMS_OF_SERVICE_URL=https://ikasilink.co.za/terms

# Company Information
COMPANY_NAME=Kasi Connect KC Pty Ltd
COMPANY_EMAIL=info@kasiconnectkc.com
COMPANY_PHONE=087 265 7453
PRIVACY_EMAIL=privacy@kasiconnectkc.com
LEGAL_EMAIL=legal@kasiconnectkc.com

# Feature Flags for Production
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEMO_DATA=false